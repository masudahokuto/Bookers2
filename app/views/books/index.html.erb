
<h3><%= @user.name %></h3>
<h3><%= @user.introduction %></h3>
<button>自分のuserのedit</button>
<h1>New book</h1>
<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :opinion %>
  <%= f.submit 'Create Book' %>
<% end %>

<% @books.each do |book| %>
  <br>
  <%= book.title %>
  <br>
  <%= book.opinion %>
  <br>
<% end %>