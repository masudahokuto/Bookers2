<%= render 'users/user_info', user: @user, book: @newbook %>
  <br>
<p><%= link_to @user.name, user_path(@user) %></p>
  <br>
<p><%= link_to @book.title, book_path(@book) %></p>
  <br>
<p><%= @book.opinion %></p>
  <br>
<% if current_user.id == @book.user_id %>
  <%= link_to 'Edit', edit_book_path(@book), class: 'btn btn-sm btn-success edit-button' %>
  <%= link_to 'Destroy', book_path(@book), method: :delete, data: { confirm: '本当に消しますか？' }, class: 'btn btn-sm btn-danger destroy-button', rel: 'nofollow' %>
<% end %>
