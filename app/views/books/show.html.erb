  <%= render 'users/user_info', user: @user, book: @newbook %>
  <div class="col-md-8 offset-md-1">
    <h2>Book detail</h2>
    <table class="table table-hover table-inverse">
      <tbody>
        <tr>
          <td class="col-md-1">
            <%= link_to user_path(@user) do %>
              <%= image_tag @user.get_profile_image(80, 80) %>
            <% end %>
          <%= link_to @user.name, user_path(@user) %>
          </td>
          <td>
            <%= link_to @book.title, book_path(@book) %>
          </td>
          <td><%= @book.body %></td>
          <% if current_user.id == @book.user_id %>
            <td>
              <%= link_to 'Edit', edit_book_path(@book), class: 'btn btn-sm btn-success edit-button' %>
            </td>
            <td>
              <%= link_to 'Destroy', book_path(@book), method: :delete, data: { confirm: '本当に消しますか？' }, class: 'btn btn-sm btn-danger destroy-button', rel: 'nofollow' %>
            </td>
          <% end %>
        </tr>
      </tbody>
    </table>
  </div>
</main>