<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
      <%= form_with model: @book do |f| %>
        <div class="form-group">
          <label for="inputTitle">Title</label>
          <%= f.text_field :title, autofocus: true, id:"inputTitle", placeholder:"Title",class: "form-control"%>
        </div>
        <div class="form-group">
          <label for="Opinion">Opinion</label>
          <%= f.text_area :opinion, autofocus: true, id:"inputOpinion", placeholder:"Opinion",class: "form-control"%>
        </div>
        <%= f.submit "Update User", class: "btn btn-success" %>
      <% end %>
      <%= link_to "Show", book_path(@book) %>
        |
      <%= link_to "back", books_path %>
      </form>
    </div>
  </div>
</div>
