<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
        <% if @book.errors.any? %>
          <h3>
            <% if @book.errors.count > 1 %>
              <%= @book.errors.count %> errors prohibited this obj from being saved:
            <% else %>
              <%= @book.errors.count %> error prohibited this obj from being saved:
            <% end %>
          </h3>
          <ul>
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
      <%= form_with model: @book do |f| %>
        <div class="form-group">
          <label for="inputTitle">Title</label>
          <%= f.text_field :title, id:"inputTitle", class: "form-control"%>
        </div>
        <div class="form-group">
          <label for="Body">Opinion</label>
          <%= f.text_area :body, id:"inputBody", class: "form-control"%>
        </div>
        <%= f.submit "Update Book", class: "btn btn-success mb-3" %>
      <% end %>
      <%= link_to "Show", book_path(@book) %>
        |
      <%= link_to "Back", books_path %>
      </form>
    </div>
  </div>
</div>
