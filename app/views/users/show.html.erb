      <%= render 'user_info', user: @user, book: @book %>
      <div class="col-md-8 offset-md-1">
        <h2>Books</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
              <tr>
                <td class="col-md-1">
                  <% if @user.image.attached? %>
                    <%= link_to user_path(@user) do %>
                      <%= image_tag url_for(@user.image), alt: "User image", width: "80", height: "80" %>
                    <% end %>
                  <% else %>
                    <%= image_tag "no_image.jpg", alt: "Default Image", width: "80", height: "80" %>
                  <% end %>
                </td>
                <td class="col-md-3">
                  <%= link_to book.title, book_path(book) %>
                </td>
                <td>
                  <%= book.opinion %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>