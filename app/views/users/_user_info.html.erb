<body>
  <div class="container px-5 px-sm-0">
    <% if book.errors.any? %>
      <h3><%= book.errors.count %>errors prohibited this obj from being saved:</h3>
      <ul>
        <% book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
    <div class="row">
      <div class="col-md-3">
        <h2>User info</h2>
        <% if user.image.attached? %>
          <%= image_tag url_for(user.image), alt: "User image", width: "100", height: "100" %>
        <% else %>
          <%= image_tag "no_image.jpg", alt: "Default Image", width: "100", height: "100" %>
        <% end %>
        <table class="table">
          <tbody>
            <tr>
            </tr><tr>
              <th>name</th>
              <th><%= user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= user.introduction %></th>
            </tr>
          </tbody>
        </table>
        <div class="row">
          <% if user == current_user %>
            <%= link_to(edit_user_path(user), class: "btn btn-outline-secondary btn-block") do %>
              <i class="fa-solid fa-user-gear"></i>
            <% end %>
          <% else %>
            <%= link_to(user_path(current_user), class: "btn btn-outline-secondary btn-block") do %>
              <i class="fa-solid fa-user-gear"></i>
            <% end %>
          <% end %>
        </div>
        <h2 class="mt-3">New book</h2>

        <%= form_with model: book, local: true do |f| %>
          <div class="form-group">
            <label for="inputTitle">Title</label>
            <%= f.text_field :title, id:"inputTitle", class: "form-control", value: "" %>
          </div>
          <div class="form-group">
            <label for="inputOpinion">Opinion</label>
            <%= f.text_area :opinion, id:"inputOpinion", class: "form-control", value: "" %>
          </div>
          <form action="/books" method="post">
            <button type="submit" class="btn btn-success">Create Book</button>
          </form>
        <% end %>
      </div>
