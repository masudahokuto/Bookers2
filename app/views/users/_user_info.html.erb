<main>
  <p class="mt-0 mb-1rem">
    <%= flash[:notice] %>
  </p>
  <div class="container px-5 px-sm-0">
    <% if book.errors.any? %>
      <h3><%= book.errors.count %> errors prohibited this obj from being saved:</h3>
      <ul>
        <% book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
    <div class="row">
      <div class="col-md-3">
        <h2>User info</h2>
        <%= link_to user_path(user) do %>
          <%= image_tag user.get_profile_image(100, 100) %>
        <% end %>
        <table class="table">
          <tbody>
            <tr>
            </tr><tr>
              <th>name</th>
              <th><%= user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= user.introduction %></th>
            </tr>
          </tbody>
        </table>
        <div class="row">
          <%= link_to(edit_user_path(user), class: "btn btn-outline-secondary btn-block mt-4") do %>
            <i class="fa-solid fa-user-gear"></i>
          <% end %>
        </div>
        <h2 class="mt-3">New book</h2>
        <%= form_with model: book, local: true do |f| %>
          <div class="form-group">
            <label for="inputTitle">Title</label>
            <%= f.text_field :title, id:"inputTitle", class: "form-control", value: "" %>
          </div>
          <div class="form-group">
            <label for="inputBody">Opinion</label>
            <%= f.text_area :body, id:"inputbody", class: "form-control", value: "" %>
          </div>
          <%= f.submit 'Create Book', class: "btn btn-success mb-3" %>
        <% end %>
      </div>
