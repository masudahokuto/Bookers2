<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>User info</h1>
      <%= form_with model: @user do |f| %>
        <div class="form-group">
          <label for="inputName">Name</label>
          <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"Name",class: "form-control"%>
        </div>
        <div class="form-group">
          <label for="inputImage">Image</label>
            <br>
          <%= f.file_field :image, placeholder: "image", accept: "image/*" %>
        </div>
        <div class="form-group">
          <label for="inputIntroduction">Introduction</label>
          <%= f.text_area :introduction, autofocus: true, id:"inputIntroduction", placeholder:"introduction",class: "form-control"%>
        </div>
        <%= f.submit "Update User", class: "btn btn-secondary"%>
      <% end %>
    </div>
  </div>
</div>

